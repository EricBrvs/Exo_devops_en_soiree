pipeline {
    agent any
    stages {
        stage ("Checkout code") {
            steps {
                //recuperer le code depuis git 
                git branch: 'main', url: "https://github.com/EricBrvs/Exo_devops_en_soiree"
            }
        }
        stage ("Run unit Tests") {
            steps {
                //je peux faire ici tous mes tests
                sh '''
                if grep -q "<h1>" page_web.html; then
                    echo "HTML tests PASSED"; 
                else
                    echo "HTML test FAILED";
                fi 
                '''
            } 
        }
    }
}