pipeline {
    agent any

    stages {
        stage('Checkout code') {
            steps {
                // Récupérer le code depuis Git
                git branch: 'main', url: "https://github.com/EricBrvs/Exo_devops_en_soiree"
            }
        }

        stage('Run unit Tests') {
            steps {
                // Lancer les tests unitaires ou autres vérifications
                sh '''
                if grep -q "<h1>" page_web.html; then
                    echo "HTML tests PASSED"; 
                else
                    echo "HTML test FAILED";
                fi 
                '''
            }
        }

        stage('Deploy instance') {
            steps {
                // Utiliser echo dans un bloc 'sh' pour l'exécution correcte de la commande
                sh '''
                echo "Deploying application"
                '''
                // Autres commandes de déploiement peuvent être ajoutées ici
            }
        }
    }
}

